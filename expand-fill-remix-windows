# Sourced in mousegen-windows

EXPAND_FILL_CURSORS="-f bd_double_arrow \
    -f fd_double_arrow \
    -f move \
    -f sb_down_arrow \
    -f sb_h_double_arrow \
    -f sb_left_arrow \
    -f sb_right_arrow \
    -f sb_up_arrow \
    -f sb_v_double_arrow \
    -f left_ptr_watch \
    -f circle \
    -f context-menu \
    -f copy \
    -f link \
    -f person \
    -f pin \
    -f pointer-move \
    -f pencil"

EXPAND_FILL_BUILD_DIR="$BUILD_DIR.expand-fill"
(
  BUILD_DIR="$EXPAND_FILL_BUILD_DIR"
  mousegenRender --no-shadow-also --expand-fill=4 $EXPAND_FILL_CURSORS
)

# Have only the arrows and the original (sharp) pointers with expanded fill
rm "$EXPAND_FILL_BUILD_DIR"/Modern-*/Person.cur \
	"$EXPAND_FILL_BUILD_DIR"/Modern-*/Pin.cur \
	"$EXPAND_FILL_BUILD_DIR"/Modern-*/Unavailable.cur \
	"$EXPAND_FILL_BUILD_DIR"/Modern-*/Work.ani

cp -R "$EXPAND_FILL_BUILD_DIR"/* "$BUILD_DIR"
rm -rf "$EXPAND_FILL_BUILD_DIR"
