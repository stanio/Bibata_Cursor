# Sourced in build-stanio-linux

RENDER_ARGS="../../$RENDER_CONFIG \
    --linux-cursors --build-dir $BUILD_DIR-expand-fill \
    --source svg/modern --name Bibata-Modern \
    --source svg/original --name Bibata-Original \
    --source svg/modern-right --name Bibata-Left-Handed-Modern \
    --source svg/original-right --name Bibata-Left-Handed-Original \
    --color Classic,Ice \
    --pointer-shadow=9,15,9,0.3 --no-shadow-also \
    --thin-stroke --stroke-width=8:Hairline \
    --expand-fill=4 --min-stroke-width=0.9 \
    -s /1.25 -r 20,24,32,40,48,64,72,96"

SELECTED_CURSORS="-f bd_double_arrow \
    -f fd_double_arrow \
    -f move \
    -f sb_down_arrow \
    -f sb_h_double_arrow \
    -f sb_left_arrow \
    -f sb_right_arrow \
    -f sb_up_arrow \
    -f sb_v_double_arrow \
    -f left_ptr_watch \
    -f center_ptr \
    -f circle \
    -f context-menu \
    -f copy \
    -f left_ptr \
    -f link \
    -f person \
    -f pin \
    -f pointer-move \
    -f right_ptr \
    -f pencil"

$BUILD_SCRIPT mousegen:run \
	-PmousegenJvmArgs="$RENDER_JOPTS -Dmousegen.animRateGain=1.25 -Dxcur.cropToContent=true" \
	--args="render $RENDER_ARGS $SELECTED_CURSORS" || exit

# Have only the original (sharp) pointers with expanded fill
rm "$BUILD_DIR-expand-fill"/*-Modern-*/cursors/center_ptr \
	"$BUILD_DIR-expand-fill"/*-Modern-*/cursors/circle \
	"$BUILD_DIR-expand-fill"/*-Modern-*/cursors/context-menu \
	"$BUILD_DIR-expand-fill"/*-Modern-*/cursors/copy \
	"$BUILD_DIR-expand-fill"/*-Modern-*/cursors/left_ptr \
	"$BUILD_DIR-expand-fill"/*-Modern-*/cursors/left_ptr_watch \
	"$BUILD_DIR-expand-fill"/*-Modern-*/cursors/link \
	"$BUILD_DIR-expand-fill"/*-Modern-*/cursors/pointer-move \
	"$BUILD_DIR-expand-fill"/*-Modern-*/cursors/right_ptr

cp -R "$BUILD_DIR-expand-fill"/* "$BUILD_DIR"
rm -rf "$BUILD_DIR-expand-fill"
